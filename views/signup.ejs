<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("includes/head.ejs", {page_name: "Sign up"}) %>
    <link rel="stylesheet" href="/styles/registration-style.css" />
    <script src="/scripts/registration-script.js" defer></script>
  </head>
  <body>
    <section id="wrapper">
      <div class="right">
        <a href="/"
          ><img src="/assets/BlockyLand.png" alt="logo" id="logo"
        /></a>
        <!-- <span class="exit-icon icon"><ion-icon name="close"></ion-icon></span> -->
        <form action="/signup" id="loginForm" method="post">
          <% if (inputData.errorMessage) {%>
          <p style="color: red; text-align: center">
            <%= inputData.errorMessage %>
          </p>
          <% } %>
          <div class="input-box">
            <input
              type="text"
              id="name"
              name="name"
              value="<%= inputData.name %>"
              required
            />
            <label for="name">Name</label>
          </div>
          <div class="input-box">
            <span class="icon"><ion-icon name="mail-outline"></ion-icon></span>
            <input
              type="email"
              id="email"
              name="email"
              value="<%= inputData.email %>"
              required
            />
            <label for="email">Email</label>
          </div>
          <div class="input-box">
            <span class="icon"
              ><ion-icon name="lock-closed-outline"></ion-icon
            ></span>
            <input
              type="password"
              id="password"
              name="password"
              value="<%= inputData.password %>"
              required
            />
            <label for="password">Password</label>
          </div>
          <div class="input-box">
            <span class="icon"
              ><ion-icon name="lock-closed-outline"></ion-icon
            ></span>
            <input
              type="password"
              id="password_repeat"
              name="password_repeat"
              value="<%= inputData.password_repeat %>"
              required
            />
            <label for="password_repeat">Repeat password</label>
          </div>
          <button type="submit" class="btn" id="submit-btn">Sign up</button>
          <p>
            Already have an account? <a href="/login" class="sign-up">Log in</a>
          </p>
        </form>
      </div>
      <div class="left">
        <img src="/assets/blocky.png" />
      </div>
    </section>
  </body>
</html>
