<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("includes/head.ejs", {page_name: "Add item"}) %>
    <link rel="stylesheet" href="styles/forms.css" />
  </head>
  <body>
    <div class="everything">
      <%- include("includes/header.ejs", {filters_menu: false}) %>
    </div>

    <main>
      <h1 style="margin-top: 0">Add item info</h1>
      <form action="/add-item" method="post" enctype="multipart/form-data">
        <div class="form-control">
          <label for="set_type">Set type</label>
          <select name="set_type" id="set_type" required>
            <% for (const type of set_types) { %>
            <option value="<%= type.name %>"><%= type.name %></option>
            <% } %>
          </select>
        </div>
        <div class="form-control">
          <label for="name">Name of the set</label>
          <input type="text" id="name" name="name" required />
        </div>
        <div class="form-control">
          <label for="age">Age recommendations</label>
          <input type="number" id="age" name="age" required />
        </div>
        <div class="form-control">
          <label for="pieces">Piece count</label>
          <input type="number" id="pieces" name="pieces" required />
        </div>
        <div class="form-control">
          <label for="price">Price</label>
          <input type="number" id="price" name="price" step="0.01" required />
        </div>

        <div class="form-control">
          <label for="main_image">Main image</label>
          <input
            class="btn"
            type="file"
            id="main_image"
            name="main_image"
            required
          />
        </div>

        <div class="form-control">
          <label for="other_images">Other set images</label>
          <input
            class="btn"
            type="file"
            id="other_images"
            name="other_images"
            multiple
            required
          />
        </div>

        <div>
          <button class="btn" type="submit">Add!</button>
        </div>
      </form>
    </main>

    <%- include("includes/footer.ejs") %>
  </body>
</html>
